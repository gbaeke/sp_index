# Azure AI Search configuration
SEARCH_ENDPOINT=https://your-search-service.search.windows.net
API_KEY=your-search-api-key
API_VERSION=2025-11-01-preview

# Datasource configuration
DATASOURCE_NAME=sharepoint-datasource
# CONTAINER_NAME=allSiteLibraries
CONTAINER_NAME=useQuery
CONTAINER_QUERY=includeLibrariesInSite=https://yourcompany.sharepoint.com/sites/YourSite

# SharePoint connection string (replace with your actual connection string)
CONNECTION_STRING="SharePointOnlineEndpoint=https://yourcompany.sharepoint.com;ApplicationId=your-app-id;FederatedCredentialObjectId=your-managed-identity-object-id;TenantId=your-tenant-id"
ENABLE_ACL=false

# Embedding Model (Microsoft Foundry)
EMBEDDING_ENDPOINT=https://your-foundry-resource.cognitiveservices.azure.com/
EMBEDDING_KEY=your-foundry-api-key
EMBEDDING_DEPLOYMENT=text-embedding-3-small
EMBEDDING_MODEL=text-embedding-3-small

# Chat Completion Model (Microsoft Foundry)
CHAT_ENDPOINT=https://your-foundry-resource.cognitiveservices.azure.com/
CHAT_KEY=your-foundry-api-key
CHAT_DEPLOYMENT=gpt-4.1
CHAT_MODEL=gpt-4.1

# Resource prefix for index/datasource/skillset/indexer names
RESOURCE_PREFIX=sp-custom

# Optional: Additional SharePoint columns to index (comma-separated)
ADDITIONAL_COLUMNS=Department

# Optional: Knowledge base name
KNOWLEDGE_BASE_NAME=sp-custom-kb
